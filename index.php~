<script>


$(function(){
	
	$('#btn_login').click(
		function(){
			var dati = $('#form_login_operatore').formSerialize();
			$.post('gestione/verifica_login_operatore.php', dati, function(data){
				if(data=='1'){
					//alert('Login Ok');
					window.location.href = 'riepilogo.php';
				}
                                else if(data=='2'){
                                    window.location.href = 'segreteria.php';
                                }
				else{
					//alert('Errore');
					$('#error_msg').fadeIn();
				}
				//
				//location.reload();
			});
		}	
	)
	
	

})
</script>

